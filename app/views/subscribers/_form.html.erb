<%= form_with(model: subscriber, local: true) do |form| %>
  <% if subscriber.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subscriber.errors.count, "error") %> prohibited this subscriber from being saved:</h2>

      <ul>
        <% subscriber.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if subscriber.new_record? %>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email, placeholder: "me@example.com" %>
    </div>
  <% else  %>
    <div>
      <p><%= subscriber.email %></p>
    </div>
  <% end %>

  <div>
    <%= form.label :threshold %>
    <%= form.number_field :threshold, placeholder: 300 %>
  </div>

  <div class="actions">
    <%= form.submit subscriber.new_record? ? "Subscribe" : "Update" %>
  </div>
<% end %>
